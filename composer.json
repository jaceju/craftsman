{
    "name": "jaceju/craftsman",
    "description": "Simple boilerplate for build your command line tool.",
    "minimum-stability": "dev",
    "license": "MIT",
    "authors": [
        {
            "name": "Jace Ju",
            "email": "jaceju@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "corneltek/cliframework": ">=2.2.0"
    },
    "require-dev": {
        "kherge/box": "2.5.2"
    },
    "autoload": {
        "classmap": [
            "src/",
            "tests/"
        ]
    },
    "scripts": {
        "build": "./vendor/bin/box build && mv bin/craftsman.phar bin/craftsman"
    },
    "bin": [
        "bin/craftsman"
    ]
}
